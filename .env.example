# StreamCaster Configuration
# Google Drive API設定

# Google Drive API Key (公開フォルダ用)
GOOGLE_DRIVE_API_KEY=your_google_drive_api_key_here

# OAuth認証 (プライベートフォルダ用)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# アプリケーション設定
PORT=8080
NODE_ENV=development

# 配信設定
RTMP_SERVER=rtmp://localhost:1935/live
STREAM_KEY=stream

# ログレベル
LOG_LEVEL=info

# セキュリティ設定
ALLOWED_ORIGINS=http://localhost:8080

# リソース制限
MAX_DOWNLOAD_SIZE=1073741824  # 1GB
TEMP_FILE_TTL=3600000        # 1時間（ミリ秒）

# 動画エンコード設定（画質安定化）
VIDEO_BITRATE=2000k          # 動画ビットレート（高品質: 3000k, 標準: 2000k, 低負荷: 1000k）
AUDIO_BITRATE=128k           # 音声ビットレート
VIDEO_GOP_SIZE=120           # GOPサイズ（キーフレーム間隔、4秒間隔推奨）
VIDEO_PRESET=medium          # エンコード速度（ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow）